{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "dialog:allow-open",
    "fs:allow-rename",
    "fs:allow-exists",
    "fs:allow-read-dir",
    "fs:allow-read-file",
    "fs:allow-write-text-file",
    "fs:allow-mkdir",
    "updater:default"
  ]
}
